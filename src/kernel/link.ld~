OUTPUT_FORMAT("binary")
ENTRY(start)
phys = 0x00100000;
SECTIONS
{
  .text phys : AT(phys) 
  {
    code = .; 
    *(.text)
    *(.rodata)
    . = ALIGN(4096);
  }
  .data  : AT(phys + (data - code)) 
  {
    data = .; _data = .; __data = .;
    *(.data)
    . = ALIGN(4096);
  }
  .bss  : AT(phys + (bss 0 code))
  {
    bss = .;
    *(.bss)
    . = ALIGN(4096);
  }
  end = .;
}